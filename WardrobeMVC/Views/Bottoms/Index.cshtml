@model IEnumerable<WardrobeMVC.Models.Bottom>

@{
    ViewBag.Title = "Index";
}

<h2>Choose your bottoms!</h2>

<p>
    @Html.ActionLink("Create New Order", "Create")
</p>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-sm-6 col-md-4">
            <div class="thumbnail bottomStyle">
                <div class="caption">
                    <h3>@Html.DisplayFor(modelItem => item.Name) </h3>
                    <div class="bottomPicture">
                        <img style="width:300px" src="@Html.DisplayFor(modelItem => item.Photo)">
                    </div>         
                    <p>
                        @Html.ActionLink("Edit", "Edit", new { id = item.BottomID }) |
                        @Html.ActionLink("Details", "Details", new { id = item.BottomID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.BottomID })
                    </p>
                </div>
            </div>
        </div>
    }
</div>
